<component>
	<previews>
		<preview name="light" width="200" />
		<preview name="dark" width="200" style_bg_color="0x111">
			<set_subject name="dark_theme" value="0" />
		</preview>
	</previews>

	<api>
		<prop name="label_text" type="string" default="H1 Text" />
	</api>

	<styles>
		<style name="style_light" text_color="#black" text_font="noto_regular_32" />
		<style name="style_dark" text_color="#white" />
	</styles>

	<view extends="lv_label" text="$label_text" x="0" y="-1">
		<style name="style_light" />
		<bind_style name="style_dark" subject="dark_theme" ref_value="1" />
	</view>
</component>
